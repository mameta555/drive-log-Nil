<div class="container mx-auto m-5">
  <div class="row">
    <div class="col">
      <h2>ドライブ計画タイトル編集</h2>
      
      <%= form_with model: @drive_report, url: drive_report_path(@drive_report.id), method: :patch do |f| %>
        <h5>ドライブタイトル</h5>
        <%= f.text_field :title %>
        <%= f.submit '保存' %>
      <% end %>
    </div>
  </div>
</div>