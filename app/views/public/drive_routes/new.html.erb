<h1>ドライブルート新規投稿</h1>
<%= form_with model: @drive_route do |f| %>
  <h5>思い出の一枚</h5>
    <%= f.file_field :image, accept: "image/*" %>
  <h5>タイトル</h5>
    <%= f.text_field :title %>
  <h5>ドライブルートの紹介</h5>
    <%= f.text_area :body %>
  <h5>タグ</h5>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name) do |tag| %>
      <%= tag.label do %>
        <%= tag.check_box %>
        <%= tag.text %>
      <% end %>
    <% end %>
    
  <%= f.submit '投稿' %>
<% end %>
