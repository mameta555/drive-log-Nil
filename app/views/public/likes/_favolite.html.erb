<% if drive_route.liked_by?(current_user) %>
  <p>
    <%= link_to drive_route_likes_path(drive_route), method: :delete do %>
      ♥<%= drive_route.likes.count %>いいね
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to drive_route_likes_path(drive_route), method: :post do %>
      ♡<%= drive_route.likes.count %>いいね
    <% end %>
  </p>
<% end %>