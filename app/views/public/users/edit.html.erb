<div class="container mx-auto m-5">
  <div class="row">
    <div class="col">
      <h2>プロフィール編集</h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>

        <h5>プロフィール画像</h5>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像",accept: "image/*" %>

        <h5>アカウント名</h5>
        <%= f.text_field :name, placeholder: "名前" %>

        <h5>自己紹介</h5>
        <%= f. text_area :introduction %>

        <%= f.submit '保存' %>
      <% end %>

      <p><%= link_to "退会する", check_user_path(@user), class: "btn btn-danger" %></p>
    </div>
  </div>
</div>