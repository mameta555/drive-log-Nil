<h1>投稿記事一覧</h1>
<div class="container">
  <div class="row">

    <% @drive_routes.each do |drive_route| %>
    <div class="col col-3">
      <table>
        <tr>
          <th>
            <%= link_to admin_drive_route_path(drive_route.id) do %>
              <%= image_tag drive_route.get_image(300,200) %><br>
              <%= drive_route.title %>
            <% end %>
          </th>
        </tr>
        <tr>
          <th>
            <%= drive_route.user.name %>
          </th>
        </tr>
        <tr>
          <td>
            投稿日：<%= drive_route.created_at.strftime('%Y/%m/%d') %>
          </td>
        </tr>
      </table>
    </div>
    <% end %>
    <%= paginate @drive_routes %>
  </div>
</div>